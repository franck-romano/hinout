  "description": "Log outbound and inbound HTTP requests from your application",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "author": "franck.romano@protonmail.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/franck-romano/hinout.git"
  },
  "license": "MIT",
  "files": [
    "build/**/*"
  ],
  "scripts": {
