{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "checkJs": false,
    "outDir": "./build",
    "rootDir": "./",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitUseStrict": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": false,
    "noImplicitThis": false,
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "build",
    "tests"
  ],
  "typeRoot": [
    "node_modules/@types"
  ],
  "compileOnSave": false
}
